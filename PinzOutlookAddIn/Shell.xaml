<UserControl x:Class="PinzOutlookAddIn.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinzOutlookAddIn"
             xmlns:prism="http://www.codeplex.com/prism"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
      
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Grid.Column="0" x:Name="PinzMainRegion" prism:RegionManager.RegionName="PinzMainRegion" />
            <!--ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="OutlookMainRegion" prism:RegionManager.RegionName="OutlookMainRegion" Visibility="Hidden" Margin="5" /-->
        </Grid>
    </ScrollViewer>
</UserControl>
